<p id="notice"><%= notice %></p>

<h1>Listing Universidades</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universidades.each do |universidade| %>
      <tr>
        <td><%= universidade.nombre %></td>
          <td><%= link_to content_tag(:span, '', class:"glyphicon glyphicon-eye-open")+' Ver', universidade, :class => "btn btn-success" %></td>
          <td><%= link_to content_tag(:span, '', class:"glyphicon glyphicon-pencil")+' Editar', edit_universidade_path(universidade), :class => "btn btn-warning" %></td>
          <td><%= link_to content_tag(:span, '', class:"glyphicon glyphicon-remove")+' Eliminar', universidade, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to content_tag(:span, '',class:"glyphicon glyphicon-plus")+' Agregar universidad', new_universidade_path, :class => "btn btn-primary" %>
