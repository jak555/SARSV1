<p id="notice"><%= notice %></p>

<h1>Lista de Paises</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paises.each do |paise| %>
      <tr>
        <td><%= paise.nombre %></td>
          <td><%= link_to content_tag(:span, '', class:"glyphicon glyphicon-eye-open")+' Ver', paise, :class => "btn btn-success" %></td>
        <td><%= link_to content_tag(:span, '', class:"glyphicon glyphicon-pencil")+' Editar', edit_paise_path(paise), :class => "btn btn-warning" %></td>
        <td><%= link_to content_tag(:span, '', class:"glyphicon glyphicon-remove")+' Eliminar', paise, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to content_tag(:span, '',class:"glyphicon glyphicon-plus")+' Agregar pais', new_paise_path, :class => "btn btn-primary" %>
